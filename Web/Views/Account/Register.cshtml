                        selectedCountryFlag.textContent = country.flag;
                        selectedCountryCode.textContent = country.code;
                        countryCodeInput.value = country.code;
                        countryCodeDropdown.classList.add('hidden');
                    });
                    countryList.appendChild(li);
                });
