@model DataLayer.Entities.Permission.Role
@{
    ViewData["Title"] = "Create New Role";
    var permissions = ViewBag.Permissions as List<DataLayer.Entities.Permission.Permission>;
}

<div class="fade-in">
    <!-- Header -->
    <div class="flex items-center justify-between mb-8">
        <div>
            <h1 class="text-3xl font-bold bg-gradient-to-r from-blue-400 to-purple-400 bg-clip-text text-transparent mb-2">
                Create New Role
            </h1>
            <p class="text-slate-400">Add a new role with custom permissions</p>
        </div>
        <a asp-action="Index" class="px-6 py-3 bg-slate-700/50 text-slate-300 rounded-lg hover:bg-slate-700 transition-all">
            <i class="fas fa-arrow-left mr-2"></i>
            Back to List
        </a>
    </div>

    <!-- Create Form -->
    <form asp-action="Create" method="post" class="space-y-6">
        @Html.AntiForgeryToken()

        <div asp-validation-summary="ModelOnly" class="bg-red-500/10 border border-red-500/20 rounded-lg p-4 text-red-400 mb-6"></div>

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
            <!-- Role Information -->
            <div class="lg:col-span-2 space-y-6">
                <!-- Basic Info Card -->
                <div class="glass-card rounded-xl p-6">
                    <h3 class="text-lg font-bold text-white mb-4 flex items-center">
                        <i class="fas fa-info-circle mr-2 text-blue-400"></i>
                        Basic Information
                    </h3>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <!-- Role Name -->
                        <div class="form-group">
                            <label asp-for="RoleName" class="block text-sm font-medium text-slate-300 mb-2">
                                <i class="fas fa-tag mr-2"></i>
                                @Html.DisplayNameFor(m => m.RoleName)
                                <span class="text-red-400">*</span>
                            </label>
                            <input asp-for="RoleName" 
                                   class="w-full bg-slate-800/50 border border-slate-700 rounded-lg px-4 py-3 text-white placeholder-slate-400 focus:outline-none focus:border-purple-500 transition-colors" 
                                   placeholder="e.g., ContentManager" />
                            <span asp-validation-for="RoleName" class="text-red-400 text-sm mt-1 block"></span>
                            <p class="text-xs text-slate-500 mt-1">
                                <i class="fas fa-lightbulb mr-1"></i>
                                Use PascalCase without spaces (e.g., ContentManager, SalesAgent)
                            </p>
                        </div>

                        <!-- Display Name -->
                        <div class="form-group">
                            <label asp-for="DisplayName" class="block text-sm font-medium text-slate-300 mb-2">
                                <i class="fas fa-text-width mr-2"></i>
                                @Html.DisplayNameFor(m => m.DisplayName)
                                <span class="text-red-400">*</span>
                            </label>
                            <input asp-for="DisplayName" 
                                   class="w-full bg-slate-800/50 border border-slate-700 rounded-lg px-4 py-3 text-white placeholder-slate-400 focus:outline-none focus:border-purple-500 transition-colors" 
                                   placeholder="e.g., Content Manager" />
                            <span asp-validation-for="DisplayName" class="text-red-400 text-sm mt-1 block"></span>
                            <p class="text-xs text-slate-500 mt-1">
                                <i class="fas fa-lightbulb mr-1"></i>
                                Human-readable name shown in the interface
                            </p>
                        </div>

                        <!-- Description -->
                        <div class="form-group md:col-span-2">
                            <label asp-for="Description" class="block text-sm font-medium text-slate-300 mb-2">
                                <i class="fas fa-align-left mr-2"></i>
                                @Html.DisplayNameFor(m => m.Description)
                            </label>
                            <textarea asp-for="Description" rows="3"
                                      class="w-full bg-slate-800/50 border border-slate-700 rounded-lg px-4 py-3 text-white placeholder-slate-400 focus:outline-none focus:border-purple-500 transition-colors" 
                                      placeholder="Describe what this role can do..."></textarea>
                            <span asp-validation-for="Description" class="text-red-400 text-sm mt-1 block"></span>
                        </div>

                        <!-- Is Active -->
                        <div class="flex items-center space-x-3 bg-slate-800/30 p-4 rounded-lg md:col-span-2">
                            <input asp-for="IsActive" type="checkbox" checked
                                   class="w-5 h-5 rounded border-slate-600 bg-slate-700 text-purple-500 focus:ring-purple-500 focus:ring-2" />
                            <label asp-for="IsActive" class="text-slate-300 cursor-pointer flex items-center">
                                <i class="fas fa-power-off mr-2 text-green-400"></i>
                                Active (Role is enabled and can be assigned to users)
                            </label>
                        </div>
                    </div>
                </div>

                <!-- Permissions Card -->
                <div class="glass-card rounded-xl p-6">
                    <h3 class="text-lg font-bold text-white mb-4 flex items-center">
                        <i class="fas fa-key mr-2 text-purple-400"></i>
                        Assign Permissions
                        <span class="ml-auto text-sm font-normal text-slate-400">
                            <span id="selectedCount">0</span> selected
                        </span>
                    </h3>

                    <div class="mb-4">
                        <div class="flex items-center space-x-4">
                            <button type="button" onclick="selectAll()" class="text-sm text-purple-400 hover:text-purple-300">
                                <i class="fas fa-check-double mr-1"></i>Select All
                            </button>
                            <button type="button" onclick="deselectAll()" class="text-sm text-slate-400 hover:text-slate-300">
                                <i class="fas fa-times mr-1"></i>Deselect All
                            </button>
                        </div>
                    </div>

                    @if (permissions != null && permissions.Any())
                    {
                        var permissionsByCategory = permissions.GroupBy(p => p.Category ?? "Other").OrderBy(g => g.Key);

                        <div class="space-y-4">
                            @foreach (var category in permissionsByCategory)
                            {
                                <div class="border border-slate-700 rounded-lg p-4">
                                    <div class="flex items-center justify-between mb-3">
                                        <h4 class="text-sm font-semibold text-purple-400 uppercase">
                                            <i class="fas fa-folder mr-2"></i>
                                            @category.Key
                                        </h4>
                                        <button type="button" onclick="toggleCategory('@category.Key')" 
                                                class="text-xs text-slate-400 hover:text-purple-400">
                                            Toggle All
                                        </button>
                                    </div>
                                    <div class="grid grid-cols-1 md:grid-cols-2 gap-2">
                                        @foreach (var permission in category.OrderBy(p => p.DisplayName))
                                        {
                                            <label class="flex items-center space-x-3 bg-slate-800/30 rounded-lg px-3 py-2 cursor-pointer hover:bg-slate-800/50 transition-colors category-@category.Key">
                                                <input type="checkbox" 
                                                       name="SelectedPermissions" 
                                                       value="@permission.PermissionId"
                                                       class="w-4 h-4 rounded border-slate-600 bg-slate-700 text-purple-500 focus:ring-purple-500 permission-checkbox"
                                                       onchange="updateCount()" />
                                                <div class="flex-1">
                                                    <span class="text-slate-300 text-sm">@permission.DisplayName</span>
                                                    @if (!string.IsNullOrEmpty(permission.Description))
                                                    {
                                                        <p class="text-xs text-slate-500">@permission.Description</p>
                                                    }
                                                </div>
                                            </label>
                                        }
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-8">
                            <i class="fas fa-key text-4xl text-slate-600 mb-3"></i>
                            <p class="text-slate-400">No permissions available</p>
                        </div>
                    }
                </div>
            </div>

            <!-- Sidebar -->
            <div class="space-y-6">
                <!-- Info Box -->
                <div class="bg-blue-500/10 border border-blue-500/30 rounded-lg p-4">
                    <p class="text-sm text-blue-400 mb-2">
                        <i class="fas fa-info-circle mr-2"></i>
                        <strong>Tips:</strong>
                    </p>
                    <ul class="text-xs text-blue-300 space-y-1 list-disc list-inside">
                        <li>Role Name should be unique</li>
                        <li>Select only necessary permissions</li>
                        <li>You can edit permissions later</li>
                        <li>Inactive roles cannot be assigned</li>
                    </ul>
                </div>

                <!-- Quick Stats -->
                <div class="glass-card rounded-xl p-4">
                    <h4 class="text-sm font-bold text-white mb-3">Quick Stats</h4>
                    <div class="space-y-2 text-sm">
                        <div class="flex justify-between">
                            <span class="text-slate-400">Total Permissions:</span>
                            <span class="text-white font-bold">@permissions?.Count()</span>
                        </div>
                        <div class="flex justify-between">
                            <span class="text-slate-400">Categories:</span>
                            <span class="text-white font-bold">@permissions?.GroupBy(p => p.Category).Count()</span>
                        </div>
                        <div class="flex justify-between">
                            <span class="text-slate-400">Selected:</span>
                            <span class="text-purple-400 font-bold" id="selectedCountSidebar">0</span>
                        </div>
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="space-y-2">
                    <button type="submit" class="w-full px-6 py-3 bg-gradient-to-r from-purple-500 to-pink-500 rounded-lg text-white font-medium hover:from-purple-600 hover:to-pink-600 transition-all">
                        <i class="fas fa-save mr-2"></i>
                        Create Role
                    </button>
                    <a asp-action="Index" class="block w-full px-6 py-3 bg-slate-700/50 text-slate-300 rounded-lg hover:bg-slate-700 transition-all text-center">
                        <i class="fas fa-times mr-2"></i>
                        Cancel
                    </a>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        function updateCount() {
            const count = document.querySelectorAll('.permission-checkbox:checked').length;
            document.getElementById('selectedCount').textContent = count;
            document.getElementById('selectedCountSidebar').textContent = count;
        }

        function selectAll() {
            document.querySelectorAll('.permission-checkbox').forEach(cb => {
                cb.checked = true;
            });
            updateCount();
        }

        function deselectAll() {
            document.querySelectorAll('.permission-checkbox').forEach(cb => {
                cb.checked = false;
            });
            updateCount();
        }

        function toggleCategory(category) {
            const checkboxes = document.querySelectorAll(`.category-${category} .permission-checkbox`);
            const allChecked = Array.from(checkboxes).every(cb => cb.checked);
            
            checkboxes.forEach(cb => {
                cb.checked = !allChecked;
            });
            updateCount();
        }

        // Initialize count
        updateCount();
    </script>
}
