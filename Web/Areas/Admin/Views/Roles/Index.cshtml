@model List<DataLayer.Entities.Permission.Role>

@{
    ViewData["Title"] = "Roles & Permissions Management";
}

<div class="fade-in">
    <!-- Header -->
    <div class="flex items-center justify-between mb-8">
        <div>
            <h1 class="text-3xl font-bold bg-gradient-to-r from-blue-400 to-purple-400 bg-clip-text text-transparent mb-2">
                Roles & Permissions Management
            </h1>
            <p class="text-slate-400">Manage user roles and their permissions</p>
        </div>
        <div class="flex items-center space-x-3">
            <div class="relative">
                <input type="text" id="searchInput" placeholder="Search roles..." 
                       class="bg-slate-800/50 border border-slate-700 rounded-lg px-4 py-2 pl-10 text-white placeholder-slate-400 focus:outline-none focus:border-purple-500 transition-colors">
                <i class="fas fa-search absolute left-3 top-1/2 transform -translate-y-1/2 text-slate-400"></i>
            </div>
            <a asp-action="Create" class="px-6 py-3 bg-gradient-to-r from-purple-500 to-pink-500 rounded-lg text-white font-medium hover:from-purple-600 hover:to-pink-600 transition-all">
                <i class="fas fa-plus mr-2"></i>
                Create Role
            </a>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-6">
        <div class="glass-card rounded-lg p-4">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-slate-400 text-sm mb-1">Total Roles</p>
                    <p class="text-2xl font-bold text-white">@Model.Count</p>
                </div>
                <div class="w-10 h-10 rounded-lg bg-blue-500/20 flex items-center justify-center">
                    <i class="fas fa-user-shield text-blue-400"></i>
                </div>
            </div>
        </div>

        <div class="glass-card rounded-lg p-4">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-slate-400 text-sm mb-1">Active Roles</p>
                    <p class="text-2xl font-bold text-white">@Model.Count(r => r.IsActive)</p>
                </div>
                <div class="w-10 h-10 rounded-lg bg-green-500/20 flex items-center justify-center">
                    <i class="fas fa-check-circle text-green-400"></i>
                </div>
            </div>
        </div>

        <div class="glass-card rounded-lg p-4">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-slate-400 text-sm mb-1">Total Permissions</p>
                    <p class="text-2xl font-bold text-white">@Model.SelectMany(r => r.RolePermissions).Select(rp => rp.PermissionId).Distinct().Count()</p>
                </div>
                <div class="w-10 h-10 rounded-lg bg-purple-500/20 flex items-center justify-center">
                    <i class="fas fa-key text-purple-400"></i>
                </div>
            </div>
        </div>

        <div class="glass-card rounded-lg p-4">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-slate-400 text-sm mb-1">Assigned Users</p>
                    <p class="text-2xl font-bold text-white">@Model.SelectMany(r => r.UserRoles).Count()</p>
                </div>
                <div class="w-10 h-10 rounded-lg bg-yellow-500/20 flex items-center justify-center">
                    <i class="fas fa-users text-yellow-400"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Roles Table -->
    <div class="glass-card rounded-xl overflow-hidden">
        <div class="overflow-x-auto">
            <table class="w-full">
                <thead class="bg-slate-800/50 border-b border-slate-700">
                    <tr>
                        <th class="px-6 py-4 text-left text-xs font-semibold text-slate-400 uppercase tracking-wider">Role</th>
                        <th class="px-6 py-4 text-left text-xs font-semibold text-slate-400 uppercase tracking-wider">Description</th>
                        <th class="px-6 py-4 text-left text-xs font-semibold text-slate-400 uppercase tracking-wider">Permissions</th>
                        <th class="px-6 py-4 text-left text-xs font-semibold text-slate-400 uppercase tracking-wider">Users</th>
                        <th class="px-6 py-4 text-left text-xs font-semibold text-slate-400 uppercase tracking-wider">Status</th>
                        <th class="px-6 py-4 text-left text-xs font-semibold text-slate-400 uppercase tracking-wider">Actions</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-slate-700/50" id="rolesTable">
                    @foreach (var role in Model)
                    {
                        <tr class="hover:bg-slate-800/30 transition-colors role-row" data-role-id="@role.RoleId">
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="flex items-center space-x-3">
                                    <div class="w-10 h-10 rounded-lg bg-gradient-to-br from-purple-500 to-pink-500 flex items-center justify-center text-white">
                                        <i class="fas fa-user-shield"></i>
                                    </div>
                                    <div>
                                        <div class="font-medium text-white">@role.DisplayName</div>
                                        <div class="text-sm text-slate-400">@role.RoleName</div>
                                    </div>
                                </div>
                            </td>
                            <td class="px-6 py-4">
                                <div class="text-sm text-slate-300 max-w-xs">
                                    @(role.Description ?? "No description")
                                </div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="flex items-center space-x-2">
                                    <span class="px-3 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-purple-500/20 text-purple-400">
                                        <i class="fas fa-key mr-1"></i>
                                        @role.RolePermissions.Count() Permissions
                                    </span>
                                </div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <span class="text-sm text-slate-300">
                                    @role.UserRoles.Count() Users
                                </span>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                @if (role.IsActive)
                                {
                                    <span class="px-3 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-500/20 text-green-400">
                                        <i class="fas fa-check-circle mr-1"></i>Active
                                    </span>
                                }
                                else
                                {
                                    <span class="px-3 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-red-500/20 text-red-400">
                                        <i class="fas fa-times-circle mr-1"></i>Inactive
                                    </span>
                                }
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm">
                                <div class="flex items-center space-x-2">
                                    <a asp-action="Details" asp-route-id="@role.RoleId" 
                                       class="text-blue-400 hover:text-blue-300 transition-colors" title="Details">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    @if (role.RoleName != "SuperAdmin")
                                    {
                                        <a asp-action="Edit" asp-route-id="@role.RoleId" 
                                           class="text-green-400 hover:text-green-300 transition-colors" title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <button onclick="toggleActive(@role.RoleId, '@role.RoleName', @role.IsActive.ToString().ToLower())" 
                                                class="text-yellow-400 hover:text-yellow-300 transition-colors" title="Toggle Status">
                                            <i class="fas fa-power-off"></i>
                                        </button>
                                        <button onclick="deleteRole(@role.RoleId, '@role.RoleName')" 
                                                class="text-red-400 hover:text-red-300 transition-colors" title="Delete">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    }
                                    else
                                    {
                                        <span class="text-slate-600 px-3 py-1 text-xs bg-slate-800/50 rounded">
                                            <i class="fas fa-lock mr-1"></i>Protected
                                        </span>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            @if (!Model.Any())
            {
                <div class="text-center py-12">
                    <i class="fas fa-user-shield text-5xl text-slate-600 mb-4"></i>
                    <p class="text-slate-400">No roles found</p>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Search functionality
        document.getElementById('searchInput').addEventListener('input', function(e) {
            const searchTerm = e.target.value.toLowerCase();
            const rows = document.querySelectorAll('.role-row');
            
            rows.forEach(row => {
                const text = row.textContent.toLowerCase();
                row.style.display = text.includes(searchTerm) ? '' : 'none';
            });
        });

        // Toggle active status
        async function toggleActive(roleId, roleName, isActive) {
            if (roleName === 'SuperAdmin') {
                alert('Cannot deactivate SuperAdmin role');
                return;
            }

            const action = isActive ? 'deactivate' : 'activate';
            if (!confirm(`Are you sure you want to ${action} this role?`)) {
                return;
            }

            try {
                const response = await fetch('/Admin/Roles/ToggleActive', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ id: roleId })
                });

                const result = await response.json();
                
                if (result.success) {
                    location.reload();
                } else {
                    alert(result.message);
                }
            } catch (error) {
                alert('Error performing operation');
            }
        }

        // Delete role
        async function deleteRole(roleId, roleName) {
            if (roleName === 'SuperAdmin') {
                alert('Cannot delete SuperAdmin role');
                return;
            }

            if (!confirm(`Are you sure you want to delete the role "${roleName}"?`)) {
                return;
            }

            try {
                const response = await fetch('/Admin/Roles/Delete?id=' + roleId, {
                    method: 'POST'
                });

                const result = await response.json();
                
                if (result.success) {
                    location.reload();
                } else {
                    alert(result.message);
                }
            } catch (error) {
                alert('Error performing operation');
            }
        }
    </script>
}
