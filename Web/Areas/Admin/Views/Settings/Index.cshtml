@model List<DataLayer.Entities.Setting>

@{
    ViewData["Title"] = "Site Settings";
}

<div class="fade-in">
    <!-- Header -->
    <div class="mb-8">
        <h1 class="text-3xl font-bold bg-gradient-to-r from-purple-400 to-pink-400 bg-clip-text text-transparent mb-2">
            Site Settings
        </h1>
        <p class="text-slate-400">Manage general system settings</p>
    </div>

    <!-- Settings Grid -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        @foreach (var setting in Model)
        {
            <div class="glass-card rounded-xl p-6 hover:shadow-xl transition-all">
                <div class="flex items-start justify-between mb-4">
                    <div class="flex-1">
                        <h3 class="text-lg font-bold text-white mb-2">@setting.Title</h3>
                        @if (!string.IsNullOrEmpty(setting.Description))
                        {
                            <p class="text-sm text-slate-400 mb-4">@setting.Description</p>
                        }
                        
                        <div class="space-y-3">
                            @if (!string.IsNullOrEmpty(setting.DataString))
                            {
                                <div class="flex items-center space-x-3">
                                    <span class="text-sm text-slate-500">Value:</span>
                                    <span class="px-3 py-1 bg-purple-500/20 text-purple-300 rounded-lg text-sm">@setting.DataString</span>
                                </div>
                            }
                            
                            @if (setting.DataBool.HasValue)
                            {
                                <div class="flex items-center space-x-3">
                                    <span class="text-sm text-slate-500">Status:</span>
                                    @if (setting.DataBool.Value)
                                    {
                                        <span class="px-3 py-1 bg-green-500/20 text-green-400 rounded-lg text-sm">
                                            <i class="fas fa-check-circle mr-1"></i>Enabled
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="px-3 py-1 bg-red-500/20 text-red-400 rounded-lg text-sm">
                                            <i class="fas fa-times-circle mr-1"></i>Disabled
                                        </span>
                                    }
                                </div>
                            }
                            
                            @if (setting.DataInt.HasValue)
                            {
                                <div class="flex items-center space-x-3">
                                    <span class="text-sm text-slate-500">Numeric Value:</span>
                                    <span class="px-3 py-1 bg-blue-500/20 text-blue-300 rounded-lg text-sm">@setting.DataInt.Value.ToString("N0")</span>
                                </div>
                            }
                        </div>
                    </div>
                    
                    <div class="flex items-center space-x-2">
                        @if (setting.Changeable)
                        {
                            <a asp-action="Edit" asp-route-id="@setting.Id" 
                               class="px-4 py-2 bg-blue-500/20 text-blue-400 rounded-lg hover:bg-blue-500/30 transition-colors">
                                <i class="fas fa-edit mr-2"></i>Edit
                            </a>
                        }
                        else
                        {
                            <span class="px-4 py-2 bg-slate-700/30 text-slate-500 rounded-lg cursor-not-allowed">
                                <i class="fas fa-lock mr-2"></i>Locked
                            </span>
                        }
                    </div>
                </div>

                @if (!setting.Changeable)
                {
                    <div class="mt-4 p-3 bg-yellow-500/10 border border-yellow-500/30 rounded-lg">
                        <p class="text-xs text-yellow-400">
                            <i class="fas fa-info-circle mr-1"></i>
                            These settings cannot be changed and are managed by the system
                        </p>
                    </div>
                }
            </div>
        }
    </div>

    @if (!Model.Any())
    {
        <div class="glass-card rounded-xl p-12 text-center">
            <i class="fas fa-cog text-6xl text-slate-600 mb-4"></i>
            <h3 class="text-xl font-bold text-white mb-2">No settings found</h3>
            <p class="text-slate-400">System settings are being loaded</p>
        </div>
    }

    <!-- Info Box -->
    <div class="glass-card rounded-xl p-6 mt-6">
        <div class="flex items-start space-x-4">
            <div class="w-12 h-12 rounded-lg bg-blue-500/20 flex items-center justify-center flex-shrink-0">
                <i class="fas fa-info-circle text-blue-400 text-xl"></i>
            </div>
            <div>
                <h3 class="text-lg font-bold text-white mb-2">Settings Guide</h3>
                <ul class="space-y-2 text-sm text-slate-400">
                    <li class="flex items-center">
                        <i class="fas fa-check text-green-400 mr-2"></i>
                        Editable settings are displayed with an edit button
                    </li>
                    <li class="flex items-center">
                        <i class="fas fa-check text-green-400 mr-2"></i>
                        Locked settings are managed by the system and cannot be changed
                    </li>
                    <li class="flex items-center">
                        <i class="fas fa-check text-green-400 mr-2"></i>
                        Any changes to settings are applied immediately throughout the system
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
