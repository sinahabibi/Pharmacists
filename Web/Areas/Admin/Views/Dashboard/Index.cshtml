@using DataLayer.Context
@using Microsoft.EntityFrameworkCore
@inject WebContext _context

@{
    ViewData["Title"] = "Admin Dashboard";
    
    var totalUsers = _context.Users.Count();
    var totalPosts = _context.Posts?.Count() ?? 0;
    var totalVisitors = _context.Visitors.Count();
    var recentActivitiesCount = _context.RecentActivities.Count();
    
    var recentUsers = _context.Users.OrderByDescending(u => u.RegisterDate).Take(5).ToList();
    var recentPosts = _context.Posts?.Include(p => p.User).OrderByDescending(p => p.CreateDate).Take(5).ToList();
    var recentActivities = _context.RecentActivities.Include(a => a.RecentActivityPriority).OrderByDescending(a => a.CreateDate).Take(5).ToList();
}

<div class="fade-in">
    <!-- Header -->
    <div class="mb-8">
        <h1 class="text-3xl font-bold bg-gradient-to-r from-purple-400 to-pink-400 bg-clip-text text-transparent mb-2">
            Admin Dashboard
        </h1>
        <p class="text-slate-400">Welcome to the site administration panel</p>
    </div>

    <!-- Stats Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
        <!-- Total Users -->
        <div class="stat-card liquid-glass rounded-xl p-6">
            <div class="flex items-center justify-between mb-4">
                <div class="w-12 h-12 rounded-lg bg-gradient-to-br from-blue-500 to-blue-600 flex items-center justify-center">
                    <i class="fas fa-users text-white text-xl"></i>
                </div>
                <span class="text-xs text-slate-400">Total Users</span>
            </div>
            <h3 class="text-3xl font-bold text-white mb-1">@totalUsers.ToString("N0")</h3>
            <p class="text-sm text-slate-400">Registered Users</p>
        </div>

        <!-- Total Posts -->
        <div class="stat-card liquid-glass rounded-xl p-6">
            <div class="flex items-center justify-between mb-4">
                <div class="w-12 h-12 rounded-lg bg-gradient-to-br from-purple-500 to-purple-600 flex items-center justify-center">
                    <i class="fas fa-newspaper text-white text-xl"></i>
                </div>
                <span class="text-xs text-slate-400">Total Posts</span>
            </div>
            <h3 class="text-3xl font-bold text-white mb-1">@totalPosts.ToString("N0")</h3>
            <p class="text-sm text-slate-400">Published Posts</p>
        </div>

        <!-- Total Visitors -->
        <div class="stat-card liquid-glass rounded-xl p-6">
            <div class="flex items-center justify-between mb-4">
                <div class="w-12 h-12 rounded-lg bg-gradient-to-br from-green-500 to-green-600 flex items-center justify-center">
                    <i class="fas fa-eye text-white text-xl"></i>
                </div>
                <span class="text-xs text-slate-400">Visitors</span>
            </div>
            <h3 class="text-3xl font-bold text-white mb-1">@totalVisitors.ToString("N0")</h3>
            <p class="text-sm text-slate-400">Total Visits</p>
        </div>

        <!-- Recent Activities -->
        <div class="stat-card liquid-glass rounded-xl p-6">
            <div class="flex items-center justify-between mb-4">
                <div class="w-12 h-12 rounded-lg bg-gradient-to-br from-pink-500 to-pink-600 flex items-center justify-center">
                    <i class="fas fa-chart-line text-white text-xl"></i>
                </div>
                <span class="text-xs text-slate-400">Activities</span>
            </div>
            <h3 class="text-3xl font-bold text-white mb-1">@recentActivitiesCount.ToString("N0")</h3>
            <p class="text-sm text-slate-400">Logged Activities</p>
        </div>
    </div>

    <!-- Main Grid -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-8">
        <!-- Recent Users -->
        <div class="glass-card rounded-xl p-6">
            <div class="flex items-center justify-between mb-6">
                <h2 class="text-xl font-bold text-white flex items-center">
                    <i class="fas fa-users mr-3 text-blue-400"></i>
                    Recent Users
                </h2>
                <a asp-area="Admin" asp-controller="Users" asp-action="Index" class="text-sm text-purple-400 hover:text-purple-300 transition-colors">
                    View All <i class="fas fa-arrow-right ml-1"></i>
                </a>
            </div>
            <div class="space-y-3">
                @if (recentUsers.Any())
                {
                    @foreach (var user in recentUsers)
                    {
                        <div class="flex items-center justify-between p-3 rounded-lg bg-slate-800/30 hover:bg-slate-800/50 transition-colors">
                            <div class="flex items-center space-x-3">
                                <div class="w-10 h-10 rounded-full bg-gradient-to-br from-purple-500 to-pink-500 flex items-center justify-center text-white font-bold">
                                    @user.UserName.Substring(0, 1).ToUpper()
                                </div>
                                <div>
                                    <p class="font-medium text-white">@(user.FirstName + " " + user.LastName)</p>
                                    <p class="text-sm text-slate-400">@user.Email</p>
                                </div>
                            </div>
                            <span class="text-xs text-slate-400">@user.RegisterDate.ToString("yyyy/MM/dd")</span>
                        </div>
                    }
                }
                else
                {
                    <p class="text-center text-slate-400 py-8">No users found</p>
                }
            </div>
        </div>

        <!-- Recent Posts -->
        <div class="glass-card rounded-xl p-6">
            <div class="flex items-center justify-between mb-6">
                <h2 class="text-xl font-bold text-white flex items-center">
                    <i class="fas fa-newspaper mr-3 text-purple-400"></i>
                    Recent Posts
                </h2>
                <a asp-area="Admin" asp-controller="Posts" asp-action="Index" class="text-sm text-purple-400 hover:text-purple-300 transition-colors">
                    View All <i class="fas fa-arrow-right ml-1"></i>
                </a>
            </div>
            <div class="space-y-3">
                @if (recentPosts != null && recentPosts.Any())
                {
                    @foreach (var post in recentPosts)
                    {
                        <div class="p-3 rounded-lg bg-slate-800/30 hover:bg-slate-800/50 transition-colors">
                            <div class="flex items-start justify-between mb-2">
                                <h3 class="font-medium text-white">@post.Title</h3>
                                @if (post.IsPublish)
                                {
                                    <span class="text-xs bg-green-500/20 text-green-400 px-2 py-1 rounded-full">Published</span>
                                }
                                else
                                {
                                    <span class="text-xs bg-yellow-500/20 text-yellow-400 px-2 py-1 rounded-full">Draft</span>
                                }
                            </div>
                            <div class="flex items-center justify-between text-sm text-slate-400">
                                <span><i class="fas fa-user mr-1"></i>@post.User.UserName</span>
                                <span>@post.CreateDate.ToString("yyyy/MM/dd")</span>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <p class="text-center text-slate-400 py-8">No posts found</p>
                }
            </div>
        </div>
    </div>

    <!-- Recent Activities -->
    <div class="glass-card rounded-xl p-6">
        <div class="flex items-center justify-between mb-6">
            <h2 class="text-xl font-bold text-white flex items-center">
                <i class="fas fa-chart-line mr-3 text-pink-400"></i>
                Recent Activities
            </h2>
            <a asp-area="Admin" asp-controller="Activities" asp-action="Index" class="text-sm text-purple-400 hover:text-purple-300 transition-colors">
                View All <i class="fas fa-arrow-right ml-1"></i>
            </a>
        </div>
        <div class="space-y-3">
            @if (recentActivities.Any())
            {
                @foreach (var activity in recentActivities)
                {
                    <div class="flex items-start space-x-3 p-3 rounded-lg bg-slate-800/30 hover:bg-slate-800/50 transition-colors">
                        <div class="flex-shrink-0 w-2 h-2 mt-2 rounded-full @(activity.PriorityId == 1 ? "bg-red-500" : activity.PriorityId == 2 ? "bg-yellow-500" : "bg-green-500")"></div>
                        <div class="flex-1">
                            <p class="text-white">@activity.Message</p>
                            <div class="flex items-center justify-between mt-1">
                                <span class="text-xs text-slate-400">@activity.CreateDate.ToString("yyyy/MM/dd HH:mm")</span>
                                <span class="text-xs px-2 py-1 rounded-full @(activity.PriorityId == 1 ? "bg-red-500/20 text-red-400" : activity.PriorityId == 2 ? "bg-yellow-500/20 text-yellow-400" : "bg-green-500/20 text-green-400")">
                                    @activity.RecentActivityPriority.Title
                                </span>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <p class="text-center text-slate-400 py-8">No activities found</p>
            }
        </div>
    </div>
</div>
