@{
    ViewData["Title"] = "Access Denied";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <style>
        * {
            font-family: 'Inter', sans-serif;
        }
    </style>
</head>
<body class="bg-gradient-to-br from-slate-900 via-purple-900/10 to-slate-900 min-h-screen flex items-center justify-center p-6">
    <div class="max-w-md w-full">
        <div class="text-center mb-8">
            <div class="inline-flex items-center justify-center w-24 h-24 rounded-full bg-red-500/20 mb-6">
                <i class="fas fa-ban text-5xl text-red-400"></i>
            </div>
            <h1 class="text-4xl font-bold text-white mb-3">Access Denied</h1>
            <p class="text-slate-400 text-lg">You do not have permission to access this section</p>
        </div>

        <div class="bg-slate-800/30 backdrop-blur-lg border border-slate-700/50 rounded-xl p-6 mb-6">
            <h2 class="text-lg font-bold text-white mb-4 flex items-center">
                <i class="fas fa-info-circle mr-2 text-blue-400"></i>
                Why are you seeing this message?
            </h2>
            <ul class="space-y-3 text-slate-300">
                <li class="flex items-start">
                    <i class="fas fa-check text-purple-400 mr-2 mt-1"></i>
                    <span>Your account may not have administrative permissions</span>
                </li>
                <li class="flex items-start">
                    <i class="fas fa-check text-purple-400 mr-2 mt-1"></i>
                    <span>To access the admin panel, you must log in with an administrator account</span>
                </li>
                <li class="flex items-start">
                    <i class="fas fa-check text-purple-400 mr-2 mt-1"></i>
                    <span>If you think this is an error, please contact support</span>
                </li>
            </ul>
        </div>

        <div class="flex flex-col sm:flex-row gap-3">
            <a href="/" class="flex-1 px-6 py-3 bg-gradient-to-r from-purple-500 to-pink-500 text-white rounded-lg hover:from-purple-600 hover:to-pink-600 transition-all text-center font-medium">
                <i class="fas fa-home mr-2"></i>
                Back to Home
            </a>
            <a asp-area="" asp-controller="Account" asp-action="Logout" class="flex-1 px-6 py-3 bg-slate-700/50 text-slate-300 rounded-lg hover:bg-slate-700 transition-all text-center font-medium">
                <i class="fas fa-sign-out-alt mr-2"></i>
                Logout
            </a>
        </div>
    </div>
</body>
</html>
