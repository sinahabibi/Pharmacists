@model List<DataLayer.Entities.User.User>

@{
    ViewData["Title"] = "User Management";
}

<div class="fade-in">
    <!-- Header -->
    <div class="flex items-center justify-between mb-8">
        <div>
            <h1 class="text-3xl font-bold bg-gradient-to-r from-blue-400 to-purple-400 bg-clip-text text-transparent mb-2">
                User Management
            </h1>
            <p class="text-slate-400">View and manage all system users</p>
        </div>
        <div class="flex items-center space-x-3">
            <div class="relative">
                <input type="text" id="searchInput" placeholder="Search..." 
                       class="bg-slate-800/50 border border-slate-700 rounded-lg px-4 py-2 pl-10 text-white placeholder-slate-400 focus:outline-none focus:border-purple-500 transition-colors">
                <i class="fas fa-search absolute left-3 top-1/2 transform -translate-y-1/2 text-slate-400"></i>
            </div>
            <a asp-action="Create" class="px-6 py-3 bg-gradient-to-r from-purple-500 to-pink-500 rounded-lg text-white font-medium hover:from-purple-600 hover:to-pink-600 transition-all">
                <i class="fas fa-user-plus mr-2"></i>
                Create User
            </a>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-6">
        <div class="glass-card rounded-lg p-4">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-slate-400 text-sm mb-1">Total Users</p>
                    <p class="text-2xl font-bold text-white">@Model.Count</p>
                </div>
                <div class="w-10 h-10 rounded-lg bg-blue-500/20 flex items-center justify-center">
                    <i class="fas fa-users text-blue-400"></i>
                </div>
            </div>
        </div>

        <div class="glass-card rounded-lg p-4">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-slate-400 text-sm mb-1">Active</p>
                    <p class="text-2xl font-bold text-white">@Model.Count(u => !u.IsBan)</p>
                </div>
                <div class="w-10 h-10 rounded-lg bg-green-500/20 flex items-center justify-center">
                    <i class="fas fa-check-circle text-green-400"></i>
                </div>
            </div>
        </div>

        <div class="glass-card rounded-lg p-4">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-slate-400 text-sm mb-1">Banned</p>
                    <p class="text-2xl font-bold text-white">@Model.Count(u => u.IsBan)</p>
                </div>
                <div class="w-10 h-10 rounded-lg bg-red-500/20 flex items-center justify-center">
                    <i class="fas fa-ban text-red-400"></i>
                </div>
            </div>
        </div>

        <div class="glass-card rounded-lg p-4">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-slate-400 text-sm mb-1">Today</p>
                    <p class="text-2xl font-bold text-white">@Model.Count(u => u.RegisterDate.Date == DateTime.Today)</p>
                </div>
                <div class="w-10 h-10 rounded-lg bg-purple-500/20 flex items-center justify-center">
                    <i class="fas fa-calendar-day text-purple-400"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Users Table -->
    <div class="glass-card rounded-xl overflow-hidden">
        <div class="overflow-x-auto">
            <table class="w-full">
                <thead class="bg-slate-800/50 border-b border-slate-700">
                    <tr>
                        <th class="px-6 py-4 text-left text-xs font-semibold text-slate-400 uppercase tracking-wider">User</th>
                        <th class="px-6 py-4 text-left text-xs font-semibold text-slate-400 uppercase tracking-wider">Email</th>
                        <th class="px-6 py-4 text-left text-xs font-semibold text-slate-400 uppercase tracking-wider">Phone Number</th>
                        <th class="px-6 py-4 text-left text-xs font-semibold text-slate-400 uppercase tracking-wider">Registration Date</th>
                        <th class="px-6 py-4 text-left text-xs font-semibold text-slate-400 uppercase tracking-wider">Status</th>
                        <th class="px-6 py-4 text-left text-xs font-semibold text-slate-400 uppercase tracking-wider">Actions</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-slate-700/50" id="usersTable">
                    @foreach (var user in Model)
                    {
                        <tr class="hover:bg-slate-800/30 transition-colors user-row" data-user-id="@user.UserId">
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="flex items-center space-x-3">
                                    <div class="w-10 h-10 rounded-full bg-gradient-to-br from-purple-500 to-pink-500 flex items-center justify-center text-white font-bold">
                                        @user.UserName.Substring(0, 1).ToUpper()
                                    </div>
                                    <div>
                                        <div class="font-medium text-white">@(user.FirstName + " " + user.LastName)</div>
                                        <div class="text-sm text-slate-400">@@@user.UserName</div>
                                    </div>
                                </div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="text-sm text-white">@user.Email</div>
                                @if (user.IsEmailActive)
                                {
                                    <div class="text-xs text-green-400"><i class="fas fa-check-circle mr-1"></i>Verified</div>
                                }
                                else
                                {
                                    <div class="text-xs text-yellow-400"><i class="fas fa-exclamation-circle mr-1"></i>Unverified</div>
                                }
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="text-sm text-white">@user.PhoneNumber</div>
                                @if (user.IsPhoneNumberActive)
                                {
                                    <div class="text-xs text-green-400"><i class="fas fa-check-circle mr-1"></i>Verified</div>
                                }
                                else
                                {
                                    <div class="text-xs text-yellow-400"><i class="fas fa-exclamation-circle mr-1"></i>Unverified</div>
                                }
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-300">
                                @user.RegisterDate.ToString("yyyy/MM/dd HH:mm")
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                @if (user.IsBan)
                                {
                                    <span class="px-3 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-red-500/20 text-red-400">
                                        <i class="fas fa-ban mr-1"></i>Banned
                                    </span>
                                }
                                else
                                {
                                    <span class="px-3 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-500/20 text-green-400">
                                        <i class="fas fa-check-circle mr-1"></i>Active
                                    </span>
                                }
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm">
                                <div class="flex items-center space-x-2">
                                    <a asp-action="Details" asp-route-id="@user.UserId" 
                                       class="text-blue-400 hover:text-blue-300 transition-colors" title="Details">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    @if (!user.UserName.Equals("Admin", StringComparison.OrdinalIgnoreCase))
                                    {
                                        <a asp-action="Edit" asp-route-id="@user.UserId" 
                                           class="text-green-400 hover:text-green-300 transition-colors" title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <button onclick="toggleBan(@user.UserId, @user.IsBan.ToString().ToLower())" 
                                                class="text-yellow-400 hover:text-yellow-300 transition-colors" title="Toggle Status">
                                            <i class="fas fa-user-shield"></i>
                                        </button>
                                        <button onclick="deleteUser(@user.UserId)" 
                                                class="text-red-400 hover:text-red-300 transition-colors" title="Delete">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    }
                                    else
                                    {
                                        <span class="text-slate-600 px-3 py-1 text-xs bg-slate-800/50 rounded">
                                            <i class="fas fa-shield-halved mr-1"></i>Protected
                                        </span>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            @if (!Model.Any())
            {
                <div class="text-center py-12">
                    <i class="fas fa-users text-5xl text-slate-600 mb-4"></i>
                    <p class="text-slate-400">No users found</p>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Search functionality
        document.getElementById('searchInput').addEventListener('input', function(e) {
            const searchTerm = e.target.value.toLowerCase();
            const rows = document.querySelectorAll('.user-row');
            
            rows.forEach(row => {
                const text = row.textContent.toLowerCase();
                row.style.display = text.includes(searchTerm) ? '' : 'none';
            });
        });

        // Toggle ban status
        async function toggleBan(userId, isBan) {
            if (!confirm(isBan ? 'Do you want to activate this user?' : 'Do you want to ban this user?')) {
                return;
            }

            try {
                const response = await fetch('/Admin/Users/ToggleBan', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ id: userId })
                });

                const result = await response.json();
                
                if (result.success) {
                    location.reload();
                } else {
                    alert(result.message);
                }
            } catch (error) {
                alert('Error performing operation');
            }
        }

        // Delete user
        async function deleteUser(userId) {
            if (!confirm('Are you sure you want to delete this user?')) {
                return;
            }

            try {
                const response = await fetch('/Admin/Users/Delete?id=' + userId, {
                    method: 'POST'
                });

                const result = await response.json();
                
                if (result.success) {
                    location.reload();
                } else {
                    alert(result.message);
                }
            } catch (error) {
                alert('Error performing operation');
            }
        }
    </script>
}
